<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.RegistrationActivity">

    <TextView
        android:id="@+id/usernameDescriptionTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="5dp"
        android:text="Enter username (must be 3 characters or more)"
        app:layout_constraintBottom_toTopOf="@+id/usernameRegisterEditText"
        app:layout_constraintStart_toStartOf="@+id/EmailAddressTextView"
        app:layout_constraintTop_toBottomOf="@+id/EmailAddressTextView" />

    <TextView
        android:id="@+id/registerTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="52dp"
        android:text="Register"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/EmailDescriptionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernameRegisterEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/passwordDescriptionTextView"
        app:layout_constraintEnd_toEndOf="@+id/usernameDescriptionTextView2"
        app:layout_constraintStart_toStartOf="@+id/passwordDescriptionTextView"
        app:layout_constraintTop_toBottomOf="@+id/usernameDescriptionTextView2" />

    <EditText
        android:id="@+id/passwordRegisterEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/deviceNameDescriptionTextView"
        app:layout_constraintEnd_toEndOf="@+id/usernameRegisterEditText"
        app:layout_constraintStart_toStartOf="@+id/passwordDescriptionTextView"
        app:layout_constraintTop_toBottomOf="@+id/passwordDescriptionTextView" />

    <EditText
        android:id="@+id/deviceNameEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Device name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/deviceCodeDescriptionTextView"
        app:layout_constraintEnd_toEndOf="@+id/passwordRegisterEditText"
        app:layout_constraintStart_toStartOf="@+id/deviceNameDescriptionTextView"
        app:layout_constraintTop_toBottomOf="@+id/deviceNameDescriptionTextView" />

    <EditText
        android:id="@+id/deviceCodeEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890:"
        android:ems="10"
        android:hint="Device code"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/registerButton"
        app:layout_constraintEnd_toEndOf="@+id/deviceNameEditText"
        app:layout_constraintStart_toStartOf="@+id/deviceCodeDescriptionTextView"
        app:layout_constraintTop_toBottomOf="@+id/deviceCodeDescriptionTextView" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="129dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceCodeEditText" />

    <TextView
        android:id="@+id/EmailDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Enter email (must be valid email)"
        app:layout_constraintBottom_toTopOf="@+id/EmailAddressTextView"
        app:layout_constraintStart_toStartOf="@+id/EmailAddressTextView"
        app:layout_constraintTop_toBottomOf="@+id/registerTitleTextView" />

    <TextView
        android:id="@+id/passwordDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter password (must be 5 characters or more)"
        app:layout_constraintBottom_toTopOf="@+id/passwordRegisterEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameRegisterEditText" />

    <TextView
        android:id="@+id/deviceNameDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter device name (any custom name)"
        app:layout_constraintBottom_toTopOf="@+id/deviceNameEditText"
        app:layout_constraintStart_toStartOf="@+id/passwordRegisterEditText"
        app:layout_constraintTop_toBottomOf="@+id/passwordRegisterEditText" />

    <TextView
        android:id="@+id/deviceCodeDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter device code (e.g EC:94:CB:4E:1E:36)"
        app:layout_constraintBottom_toTopOf="@+id/deviceCodeEditText"
        app:layout_constraintStart_toStartOf="@+id/deviceNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/deviceNameEditText" />

    <EditText
        android:id="@+id/EmailAddressTextView"
        android:layout_width="302dp"
        android:layout_height="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/usernameDescriptionTextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailDescriptionTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>